---
interface Props {
	name: string;
	img: string;
  linkText?: string;
	linkUrl?: string;
}

const { name, img, linkText, linkUrl } = Astro.props;
---

<section>
  <h2>{name}</h2>

  <img src={img} alt={name} />

  <slot>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur eget sem eget nulla laoreet consequat. Maecenas nulla tellus, bibendum ut risus sed, porttitor viverra tortor.</slot>

  {linkUrl && linkText &&
    <a href={linkUrl} target="_blank" rel="noopener noreferrer">{linkText}</a>
  }

</section>

