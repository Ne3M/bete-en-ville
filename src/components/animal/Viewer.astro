---
interface Props {
    alt: string;
    src: string;
    environmentImg: string;
    poster: string;
}

const { alt, src, environmentImg, poster } = Astro.props;
---
<script type="module" src="https://ajax.googleapis.com/ajax/libs/model-viewer/3.4.0/model-viewer.min.js"></script>

