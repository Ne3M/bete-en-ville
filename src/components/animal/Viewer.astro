---
interface Props {
    alt: string;
    src: string;
    environmentImg: string;
    poster: string;
}

const { alt, src, environmentImg, poster } = Astro.props;
---

<section>
    <script type="module" src="https://ajax.googleapis.com/ajax/libs/model-viewer/3.4.0/model-viewer.min.js"></script>

    <h3 class="bug-title">La petite bÃªte en 3D</h3>

    <div class="bug-viewer">
    <model-viewer 
        alt={alt}
        src={src}
        environment-image={environmentImg}
        poster={poster}
        shadow-intensity="1" 
        camera-controls 
        touch-action="pan-y">
    </model-viewer>
    </div>
</section>

<style lang="scss">
    section {
        margin-bottom: 2rem;
    }
    model-viewer {
        margin: 0 auto;
        width: auto;
        height: 500px;
        width: 500px;
        max-width: 100%;
        max-height: 80vh;
        position: relative;
        z-index: 1;
        box-shadow: 0 0 40px #0003;
        backdrop-filter: grayscale(50%) sepia(55%);
    }
        
    .bug-viewer {
        position: relative;
        &:after {
            content: "";
            display: block;
            width: 100%;
            height: 350px;
            top: 75px;
            background: url("https://www.saintguilhem-valleeherault.fr/_objects/tao_tourinsoft/fma/visuels/t1/8707.jpg?1680994801") no-repeat 100% 60%;
            position: absolute;
            background-size: cover;
        }
    }
</style>