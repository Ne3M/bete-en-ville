    slot="viewer"
    alt={title}
    src="/abeille.glb"
    environmentImg="https://upload.wikimedia.org/wikipedia/commons/thumb/d/dc/PIA17944-MarsCuriosityRover-AfterCrossingDingoGapSanddune-20140209.jpg/1920px-PIA17944-MarsCuriosityRover-AfterCrossingDingoGapSanddune-20140209.jpg"
    poster={Poster.src}
    /> -->

    <Superpower
      slot="superpower"
      power1={{
        title:"Dévoreur de déchets", 
        text:" Il transforme les feuilles mortes et le bois en humus fertile pour les plantes."
      }}
      power2={{
        title:"Maître du camouflage ", 
        text:"  Il vit caché dans les recoins sombres et frais… sans jamais se dessécher."
      }}
      power3={{
        title:"Mini-blindé", 
        text:"Sa carapace le protège, et en cas de danger, il se roule en boule comme un vrai petit bouclier."
      }}
    />

    <Drawings
      slot="drawings"
      drawings={[
        KidsDrawing1.src,
        KidsDrawing2.src
        ]}
    ></Drawings>
    
  </Creature>
  
  
  
</main>
</Layout>